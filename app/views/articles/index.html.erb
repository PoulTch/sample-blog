<h1>List of articles</h1>

<% @article.each do |article| %>

<h2><%= article.title %></h2>

<p>
	<%= article.text %>
</p>

<p>
	<%= link_to 'Show', article_path(article), class: "btn btn-outline-secondary" %>

	<% if user_signed_in? %>
	<%= link_to 'Edit', edit_article_path(article), class: "btn btn-outline-secondary" %> 
	<%= link_to 'Delete', article_path(article), class: "btn btn-outline-secondary", data: { 'turbo-method': :delete, 'turbo-confirm': 'Are you sure?' } %>
	<% else %>
	<%= link_to 'Edit', edit_article_path(article), class: "btn btn-outline-secondary disabled" %>
	<%= link_to 'Delete', article_path(article), class: "btn btn-outline-secondary disabled", data: { 'turbo-method': :delete, 'turbo-confirm': 'Are you sure?' } %>
	<i>Please <%= link_to "sign in", new_user_session_path %> or <%= link_to "register", new_user_registration_path %> to edit and delete article.</i>
	<% end %>
</p>

<hr>

<% end %>