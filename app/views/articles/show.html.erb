<h1><%= @article.title %></h1>
<p>
	<%= @article.text %>
</p>

<p>
	<%= form_for ([@article, @article.comments.build]) do |f| %>
	<% if @article && @article.errors.any? %>
	<p>
		<ul>
		<% @article.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
		</ul>		
	</p>
	<% end %>

	<p>
		<%= f.label :author %><br>
		<%= f.text_field :author %>
	</p>

	<p>
		<%= f.label :body %><br>
		<%= f.text_area :body %>
	</p>

	<p>
		<%= f.submit %>
	</p>
	<% end %>
</p>
<br>
<p>
	<% @article.comments.each do |comment| %>
		<h2><%= comment.author %></h2>
		<p>
			<%= comment.body %>
		</p>
	<% end %>
</p>