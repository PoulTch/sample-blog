<h1><%= t('articles.new_article') %></h1>

<%= form_for :article, url: articles_path, data: {turbo:false} do |f| %>
	<% if @article && @article.errors.any? %>
	<p>
		<ul>
		<% @article.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
		</ul>		
	</p>
	<% end %>
	
	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title, class: "form-control" %>
	</p>

	<p>
		<%= f.label :text %><br>
		<%= f.text_area :text, class: "form-control", rows: "12" %>
	</p>

	<p>
		<%= f.submit class: "btn btn-outline-secondary" %>
	</p>
<% end %>